<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".FeedbackListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_blue"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/padding_10"
            android:src="@drawable/back_b"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/text_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="@string/orderno"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:padding="@dimen/padding_8"
                            android:text="Completed"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/header_text" />

                        <TextView
                            android:id="@+id/text_getinvoice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:gravity="center|right"
                            android:padding="@dimen/padding_8"
                            android:text="@string/getinvoice"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/header_text" />

                        <TextView
                            android:id="@+id/text_track_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:paddingLeft="@dimen/padding_10"
                            android:paddingRight="@dimen/padding_10"
                            android:text="@string/view_onmap"
                            android:textColor="@color/app_color_orange"
                            android:textSize="@dimen/label_text_size_14" />

                    </LinearLayout>



                    //deliver address

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/delivery_bike" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/picup_loc"
                                    android:textColor="@color/light_gray"
                                    android:textSize="@dimen/label_text_size_15" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="@dimen/padding_5"
                                    android:src="@drawable/home_product" />

                                <TextView
                                    android:id="@+id/text_supplier_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/name_demo"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_13" />


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="@dimen/padding_5"
                                    android:src="@drawable/phone" />

                                <TextView
                                    android:id="@+id/text_supplier_phone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/phone_no"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_13" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="@dimen/padding_5"
                                    android:src="@drawable/loc_g" />

                                <TextView
                                    android:id="@+id/text_supplier_loc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/name_loc_demo"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_13" />


                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    //deliver address

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/delivery_bike" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/deliverto"
                                    android:textColor="@color/light_gray"
                                    android:textSize="@dimen/label_text_size_15" />

                                <TextView
                                    android:id="@+id/text_order_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|right"
                                    android:text="@string/date"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_15" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="@dimen/padding_5"
                                    android:src="@drawable/sales_network" />

                                <TextView
                                    android:id="@+id/text_user_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/name_demo"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_13" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="@dimen/padding_5"
                                    android:src="@drawable/phone" />

                                <TextView
                                    android:id="@+id/text_phone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/phone_no"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_13" />


                            </LinearLayout>

<!--                            <LinearLayout-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:gravity="center"-->
<!--                                android:orientation="horizontal">-->

<!--                                <ImageView-->
<!--                                    android:layout_width="25dp"-->
<!--                                    android:layout_height="25dp"-->
<!--                                    android:padding="@dimen/padding_5"-->
<!--                                    android:src="@drawable/email_a" />-->

<!--                                <TextView-->
<!--                                    android:id="@+id/text_email"-->
<!--                                    android:layout_width="0dp"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:layout_marginLeft="@dimen/margin_5"-->
<!--                                    android:layout_weight="1"-->
<!--                                    android:gravity="center|left"-->
<!--                                    android:text="@string/demo_email"-->
<!--                                    android:textColor="@color/black"-->
<!--                                    android:textSize="@dimen/label_text_size_13" />-->


<!--                            </LinearLayout>-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="@dimen/padding_5"
                                    android:src="@drawable/loc_g" />

                                <TextView
                                    android:id="@+id/text_loc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/name_loc_demo"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_13" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="25dp"
                                    android:layout_height="25dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:gravity="center|left"
                                    android:text="@string/additional"
                                    android:textColor="@color/light_gray"
                                    android:textSize="@dimen/label_text_size_15" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:src="@drawable/email"
                                    android:padding="@dimen/padding_5"
                                    android:tint="@color/app_color_blue"
                                    android:layout_height="25dp" />

                                <TextView
                                    android:id="@+id/text_additional_req"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:gravity="center|left"
                                    android:text="@string/name_loc_demo"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_13" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:src="@drawable/phone"
                                    android:padding="@dimen/padding_5"
                                    android:layout_height="25dp" />

                                <TextView
                                    android:id="@+id/text_additional_phn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:gravity="center|left"
                                    android:text="@string/name_loc_demo"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_13" />


                            </LinearLayout>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    //payment

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="@dimen/padding_3"
                                    android:src="@drawable/card_g" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/payment"
                                    android:textColor="@color/light_gray"
                                    android:textSize="@dimen/label_text_size_15" />

                                <TextView
                                    android:id="@+id/text_payment_method"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|right"
                                    android:text="@string/banktransfer"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_15" />

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    //total amt

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="@dimen/padding_3"
                                    android:src="@drawable/currencygreen" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/you_earn"
                                    android:textColor="@color/light_gray"
                                    android:textSize="@dimen/label_text_size_15" />

                                <TextView
                                    android:id="@+id/text_totalprice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|right"
                                    android:text="@string/demo_price"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_15" />

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    //menu

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        android:visibility="gone"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="@dimen/padding_3"
                                    android:src="@drawable/menu_g" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/menu"
                                    android:textColor="@color/light_gray"
                                    android:textSize="@dimen/label_text_size_15" />

                                <TextView
                                    android:id="@+id/text_menu_items"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|right"
                                    android:text="@string/demo_menu_items"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_15" />

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_menuitemList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="3dp"
                            android:paddingLeft="@dimen/padding_listitem"
                            android:paddingRight="@dimen/padding_listitem" />
                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_accept_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_color_blue"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:text="@string/want_to_deliver"
                android:textColor="@color/white"
                android:textSize="@dimen/header_text" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>