<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.UserCartFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_10"
                android:visibility="gone">
                //delivery address

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/deliveryaddress"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/label_text_size_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="@dimen/padding_3"
                        android:src="@drawable/loc_landmark" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_weight="1"
                        android:text="@string/deliveryaddress"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_15" />

                    <ImageView
                        android:id="@+id/image_edit_address"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="@dimen/padding_3"
                        android:src="@drawable/edit" />
                </LinearLayout>

                //payment

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/payment"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/label_text_size_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="@dimen/padding_3"
                        android:src="@drawable/card" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_weight="1"
                        android:text="@string/payment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_15" />

                    <ImageView
                        android:id="@+id/image_edit_payment"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="@dimen/padding_3"
                        android:src="@drawable/edit" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                //food

                <LinearLayout
                    android:id="@+id/linear_food"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_food"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/padding_10"
                            android:text="@string/processing_request"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/label_text_size_14" />

                        <LinearLayout
                            android:id="@+id/linear_badge_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_5"
                            android:background="@drawable/circle_bg"
                            android:gravity="center|top">

                            <TextView
                                android:id="@+id/text_badge_food"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="2"
                                android:textSize="@dimen/label_text_size_10" />

                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/linear_food_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/app_color_blue"></LinearLayout>
                </LinearLayout>


                //homemade

                <LinearLayout
                    android:id="@+id/linear_homemade"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_homemade"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/padding_10"
                            android:text="@string/new_request"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/label_text_size_14" />

                        <LinearLayout
                            android:id="@+id/linear_badge_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_5"
                            android:background="@drawable/circle_bg"
                            android:gravity="center|top">

                            <TextView
                                android:id="@+id/text_badge_home"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="2"
                                android:textSize="@dimen/label_text_size_10" />

                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/linear_homemade_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"></LinearLayout>
                </LinearLayout>


                //shop

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/linear_shop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_shop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/padding_10"
                            android:text="@string/type_shop"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/label_text_size_14" />

                        <LinearLayout
                            android:id="@+id/linear_badge_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_5"
                            android:background="@drawable/circle_bg"
                            android:gravity="center|top">

                            <TextView
                                android:id="@+id/text_badge_shop"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="2"
                                android:textSize="@dimen/label_text_size_10" />

                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/linear_shop_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"></LinearLayout>
                </LinearLayout>

            </LinearLayout>

            //recycler view

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerMyRequestList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="1dp"
                    android:paddingLeft="@dimen/padding_listitem"
                    android:paddingRight="@dimen/padding_listitem" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".7"
            android:background="@color/black"></LinearLayout>
    </FrameLayout>


</LinearLayout>