<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.UserCartFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linear_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_10"
                        android:visibility="gone">
                        //delivery address

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/deliveryaddress"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/label_text_size_15" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="@dimen/padding_3"
                                android:src="@drawable/loc_landmark" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:layout_weight="1"
                                android:text="@string/deliveryaddress"
                                android:textColor="@color/black"
                                android:textSize="@dimen/label_text_size_15" />

                            <ImageView
                                android:id="@+id/image_edit_address"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="@dimen/padding_3"
                                android:src="@drawable/edit" />
                        </LinearLayout>

                        //payment

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/payment"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/label_text_size_15" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="@dimen/padding_3"
                                android:src="@drawable/card" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:layout_weight="1"
                                android:text="@string/payment"
                                android:textColor="@color/black"
                                android:textSize="@dimen/label_text_size_15" />

                            <ImageView
                                android:id="@+id/image_edit_payment"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="@dimen/padding_3"
                                android:src="@drawable/edit" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">
                        //food

                        <LinearLayout
                            android:id="@+id/linear_food"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_food"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/padding_10"
                                android:text="@string/type_food"
                                android:gravity="center"
                                android:textColor="@color/app_color_blue"
                                android:textSize="@dimen/label_text_size_14" />

                            <LinearLayout
                                android:id="@+id/linear_food_line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/app_color_blue"></LinearLayout>
                        </LinearLayout>


                        //homemade

                        <LinearLayout
                            android:id="@+id/linear_homemade"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_homemade"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/padding_10"
                                android:text="@string/type_homemade"
                                android:gravity="center"
                                android:textColor="@color/light_gray"
                                android:textSize="@dimen/label_text_size_14" />

                            <LinearLayout
                                android:id="@+id/linear_homemade_line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/light_gray"></LinearLayout>
                        </LinearLayout>


                        //shop

                        <LinearLayout
                            android:id="@+id/linear_shop"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_shop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/padding_10"
                                android:text="@string/type_shop"
                                android:gravity="center"
                                android:textColor="@color/light_gray"
                                android:textSize="@dimen/label_text_size_14" />

                            <LinearLayout
                                android:id="@+id/linear_shop_line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/light_gray"></LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    //recycler view

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerMyRequestList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="1dp"
                            android:paddingLeft="@dimen/padding_listitem"
                            android:paddingRight="@dimen/padding_listitem" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".7"
                    android:background="@color/black"></LinearLayout>
            </FrameLayout>

            //bottom slider

            <LinearLayout
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white80"
                android:clipToPadding="true"
                android:orientation="vertical"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray_20"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white80"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_arrow"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:src="@drawable/arrow_down"
                        />

                    //line

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:visibility="gone" />
                    //total jobs

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:gravity="center|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total_job_done"
                            android:textColor="@color/black"
                            android:textSize="@dimen/label_text_size_15" />

                        <TextView
                            android:id="@+id/text_total_jobs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:text="00"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/label_text_size_17"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_main_slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@color/white80"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_5">

                            //food jobs

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/type_food"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_15" />

                                <TextView
                                    android:id="@+id/text_foodjobs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:text="00"
                                    android:textColor="@color/app_color_blue"
                                    android:textSize="@dimen/label_text_size_17" />

                            </LinearLayout>

                            //home made jobs

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/type_homemade"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_15" />

                                <TextView
                                    android:id="@+id/text_handmadejobs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:text="00"
                                    android:textColor="@color/app_color_blue"
                                    android:textSize="@dimen/label_text_size_17" />

                            </LinearLayout>

                            //shops jobs

                            <LinearLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/type_shop"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_15" />

                                <TextView
                                    android:id="@+id/text_shopsjobs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:text="00"
                                    android:textColor="@color/app_color_blue"
                                    android:textSize="@dimen/label_text_size_17" />

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>


</LinearLayout>