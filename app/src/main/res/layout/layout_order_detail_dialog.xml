<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_main_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:visibility="gone"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_weight="1"
                android:gravity="center|left"
                android:padding="@dimen/padding_3"
                android:text="@string/orderdetail"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size_17" />

            <TextView
                android:id="@+id/text_view_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_15"
                android:gravity="center|left"
                android:padding="@dimen/padding_3"
                android:text="@string/order_detail"
                android:textColor="@color/gray"
                android:textSize="@dimen/label_text_size_15" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="3dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_type"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="@dimen/padding_5"
                        android:src="@drawable/home_product"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/demo_username"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_15" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="@dimen/padding_5"
                        android:src="@drawable/loc_g" />

                    <TextView
                        android:id="@+id/text_loc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/name_loc_demo"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_13" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="@dimen/padding_5"
                        android:src="@drawable/phone" />

                    <TextView
                        android:id="@+id/text_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/phone_no"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/label_text_size_13"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:gravity="center|left"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="@string/hold_money"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/label_text_size_13" />

                <LinearLayout
                    android:id="@+id/linear_wallet"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="@string/reserve_amt"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_15" />

                    <TextView
                        android:id="@+id/text_amt_wallet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="AED 23"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_credit_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/text_cardno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/select_card"
                        android:textColor="@color/app_color_orange"
                        android:textSize="@dimen/label_text_size_17"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:src="@drawable/delete" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:gravity="center|right">

            <TextView
                android:id="@+id/text_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_15"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size_15" />

            <LinearLayout
                android:id="@+id/linear_Accept_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:background="@drawable/bg_round_coner_green"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_order_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_15"
                    android:paddingRight="@dimen/padding_15"
                    android:paddingTop="@dimen/padding_5"
                    android:text="@string/accept_order"
                    android:textColor="@color/white"
                    android:textSize="@dimen/label_text_size" />

            </LinearLayout>



        </LinearLayout>






    </LinearLayout>

</LinearLayout>