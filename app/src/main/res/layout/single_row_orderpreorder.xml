<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardBackgroundColor="@color/white"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="false">


        <LinearLayout
            android:id="@+id/linear_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/padding_listitem"
                android:src="@drawable/demo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:background="@color/app_color_orange">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/padding_5"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:paddingTop="@dimen/padding_5"
                        android:text="$2.0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/label_text_size_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_listitem">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:text="James Thomson"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_15" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/add_menu" />

                        <TextView
                            android:id="@+id/text_total_items"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="White Coco (3)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/label_text_size_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/label_text_size_13" />

                        <TextView
                            android:id="@+id/text_order_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="$ 22"
                            android:textColor="@color/black"
                            android:textSize="@dimen/label_text_size_13" />
                    </LinearLayout>

                    //collecion date

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/collection_date"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/label_text_size_13" />

                        <TextView
                            android:id="@+id/text_collection_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Monday May, 22"
                            android:textColor="@color/black"
                            android:textSize="@dimen/label_text_size_13" />
                    </LinearLayout>
                    //collection time

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_no"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/label_text_size_13" />

                        <!--<TextView
                            android:id="@+id/text_collection_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="07:00pm"
                            android:textColor="@color/black"
                            android:textSize="@dimen/label_text_size_13" />-->

                        <TextView
                            android:id="@+id/text_order_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="07:00pm"
                            android:textColor="@color/black"
                            android:textSize="@dimen/label_text_size_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_accept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_5"
                            android:text="@string/accept"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/label_text_size" />

                        <TextView
                            android:id="@+id/text_reject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="@dimen/padding_5"
                            android:text="@string/reject"
                            android:textColor="@color/app_color_orange"
                            android:textSize="@dimen/label_text_size" />


                        <TextView
                            android:id="@+id/text_accepted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_5"
                            android:text="@string/accept"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/label_text_size"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/text_processing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_5"
                            android:text="@string/processing"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/label_text_size"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/text_rejected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_5"
                            android:text="@string/rejected"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/label_text_size"
                            android:visibility="gone" />

                        <TextView
                        android:id="@+id/text_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5"
                        android:text="@string/returned"
                        android:textColor="@color/app_color_blue"
                        android:textSize="@dimen/label_text_size"
                        android:visibility="gone" />

                        <TextView
                            android:id="@+id/text_cancelled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_5"
                            android:text="@string/cancelled"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/label_text_size"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/text_out_of_delivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_5"
                            android:text="@string/out_of_delivery"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/label_text_size"
                            android:visibility="gone" />



                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>