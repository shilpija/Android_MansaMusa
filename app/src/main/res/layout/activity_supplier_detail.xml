<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MenuDetail">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:fitsSystemWindows="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        //other details

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/headerimg"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/defualt_list" />

                            //inside content

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="40dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:orientation="vertical">

                                //views

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/padding_10">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:padding="@dimen/padding_5"
                                            android:text="@string/userviews"
                                            android:textColor="@color/light_gray"
                                            android:textSize="@dimen/label_text_size_13" />

                                        <TextView
                                            android:id="@+id/text_customerviews"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/label_text_size_17" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="@dimen/padding_10"
                                        android:layout_marginTop="@dimen/padding_10"
                                        android:background="@color/light_gray"></LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/linear_availableitems"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:padding="@dimen/padding_5"
                                            android:text="@string/itemavailable"
                                            android:textColor="@color/light_gray"
                                            android:textSize="@dimen/label_text_size_13" />

                                        <TextView
                                            android:id="@+id/text_avialable"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/label_text_size_17" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="@dimen/padding_10"
                                        android:layout_marginTop="@dimen/padding_10"
                                        android:background="@color/light_gray"></LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:padding="@dimen/padding_5"
                                            android:text="@string/deliveredorder"
                                            android:textColor="@color/light_gray"
                                            android:textSize="@dimen/label_text_size_13" />

                                        <TextView
                                            android:id="@+id/text_delivered"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/label_text_size_17" />
                                    </LinearLayout>
                                </LinearLayout>
                                //schedule
                                //chef's schedule--------------

                                <LinearLayout
                                    android:id="@+id/linear_schedule_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_10"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/padding_15"
                                        android:paddingRight="@dimen/padding_15">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center|left"
                                            android:text="Chef James Schedule"
                                            android:textColor="@color/light_gray"
                                            android:textSize="@dimen/label_text_size_13" />

                                        <TextView
                                            android:id="@+id/text_schedule_loadmore"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/loadmore"
                                            android:textColor="@color/light_gray"
                                            android:textSize="@dimen/label_text_size_13" />
                                    </LinearLayout>

                                    <HorizontalScrollView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_10">

                                        <LinearLayout
                                            android:id="@+id/linear_schedule"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal"></LinearLayout>
                                    </HorizontalScrollView>
                                </LinearLayout>

                                <!--//all ratings-->

                                <!--<LinearLayout-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:gravity="center"-->
                                <!--android:paddingLeft="@dimen/padding_15"-->
                                <!--android:paddingRight="@dimen/padding_15"-->
                                <!--android:paddingTop="@dimen/padding_10">-->

                                <!--<TextView-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_weight="1"-->
                                <!--android:gravity="center|left"-->
                                <!--android:text="@string/individual_rating"-->
                                <!--android:textColor="@color/light_gray"-->
                                <!--android:textSize="@dimen/label_text_size_13" />-->

                                <!--</LinearLayout>-->

                                <!--<LinearLayout-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_marginTop="@dimen/margin_5"-->
                                <!--android:gravity="center"-->
                                <!--android:orientation="horizontal"-->
                                <!--android:paddingLeft="@dimen/padding_15"-->
                                <!--android:paddingRight="@dimen/padding_15">-->

                                <!---->
                                <!--</LinearLayout>-->

                                //comments

                                <LinearLayout
                                    android:id="@+id/linear_comment_section"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/padding_15"
                                        android:paddingRight="@dimen/padding_15"
                                        android:paddingTop="@dimen/padding_10">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center|left"
                                            android:text="@string/comments"
                                            android:textColor="@color/light_gray"
                                            android:textSize="@dimen/label_text_size_13" />

                                        <TextView
                                            android:id="@+id/text_comments_loadmore"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/loadmore"
                                            android:textColor="@color/light_gray"
                                            android:textSize="@dimen/label_text_size_13" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_5"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/padding_15"
                                        android:paddingRight="@dimen/padding_15">


                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/image_comment"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:src="@drawable/icon" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:gravity="center|left"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/text_comment_user"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:singleLine="true"
                                                    android:textColor="@color/black"
                                                    android:textSize="@dimen/label_text_size_15"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/text_comment_time"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="2days ago"
                                                    android:textColor="@color/light_gray"
                                                    android:textSize="@dimen/label_text_size_13" />
                                            </LinearLayout>

                                            <TextView
                                                android:id="@+id/text_comment"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/label_text_size_15" />


                                        </LinearLayout>


                                    </LinearLayout>

                                </LinearLayout>
                                //description

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/padding_15"
                                    android:paddingRight="@dimen/padding_15"
                                    android:text="@string/description"
                                    android:textColor="@color/light_gray"
                                    android:textSize="@dimen/label_text_size_13" />

                                <TextView
                                    android:id="@+id/text_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|left"
                                    android:paddingLeft="@dimen/padding_15"
                                    android:paddingRight="@dimen/padding_15"
                                    android:text="It's helpful to add to this, even though it's an old post, that if the child view that is being inflated from xml is to be added to a viewgroup layout, you need to call inflate with a clue of what type of viewgroup it is going to be added to. Like:"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size" />

                            </LinearLayout>

                        </LinearLayout>

                        //image--- name----loc

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_5"
                            android:layout_marginTop="150dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/padding_10">
                                    //imageview

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|left">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:id="@+id/profile_image"
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/icon" />

                                            <LinearLayout
                                                android:id="@+id/linear_active_inactive"
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_gravity="right|bottom"
                                                android:background="@drawable/circle_bg_green_filled"
                                                android:orientation="horizontal" />
                                        </FrameLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:orientation="vertical">
                                        //name and favo

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/text_suppliername"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:singleLine="true"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/label_text_size_15" />

                                            <ImageView
                                                android:id="@+id/image_favo"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:src="@drawable/heart_green" />
                                        </LinearLayout>

                                        //price

                                        <TextView
                                            android:id="@+id/text_price"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/demo_price"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/label_text_size_15"
                                            android:visibility="gone" />
                                        //rating

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center">

                                            <RatingBar
                                                android:id="@+id/ratingBar_overall"
                                                style="?android:attr/ratingBarStyleSmall"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:numStars="5"
                                                android:rating="3.5"
                                                android:theme="@style/RatingBar" />

                                            <TextView
                                                android:id="@+id/text_review"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:singleLine="true"
                                                android:text="(0 Reviews)"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/label_text_size_10" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>

                            </android.support.v7.widget.CardView>
                        </LinearLayout>


                        //back btn

                        <LinearLayout
                            android:id="@+id/linear_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="@dimen/margin_10"
                            android:background="@drawable/circle_backbutton">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="@dimen/padding_5"
                                android:src="@drawable/back_b" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_chef_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/margin_15"
            android:background="@drawable/bg_bottom_round_coner_orange">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingBottom="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_15"
                android:paddingRight="@dimen/padding_15"
                android:paddingTop="@dimen/padding_5"
                android:text="@string/view_prodct"
                android:textColor="@color/white"
                android:textSize="@dimen/label_text_size" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>