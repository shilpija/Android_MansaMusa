<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".MenuDetail">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_15">

                    //pending request

                    <LinearLayout
                        android:id="@+id/linear_pending_req"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text_heading_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_5"
                            android:text="@string/pending_req"
                            android:textColor="@color/black"
                            android:textSize="@dimen/label_text_size_15" />

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_10">
                                //name

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/name"
                                        android:textColor="@color/light_gray"
                                        android:textSize="@dimen/label_text_size_13" />

                                    <TextView
                                        android:id="@+id/text_name"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_5"
                                        android:layout_weight="1"
                                        android:singleLine="true"
                                        android:text="@string/name_demo"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/label_text_size_14" />

                                    <TextView
                                        android:id="@+id/text_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:singleLine="true"
                                        android:text="2 days ago"
                                        android:textColor="@color/light_gray"
                                        android:textSize="@dimen/label_text_size_13" />
                                </LinearLayout>

                                //phone

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/contact"
                                        android:textColor="@color/light_gray"
                                        android:textSize="@dimen/label_text_size_13" />

                                    <TextView
                                        android:id="@+id/text_contactno"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_5"
                                        android:layout_weight="1"
                                        android:singleLine="true"
                                        android:text="@string/phone_no"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/label_text_size_14" />
                                </LinearLayout>


                                //location

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/loc"
                                        android:textColor="@color/light_gray"
                                        android:textSize="@dimen/label_text_size_13" />

                                    <TextView
                                        android:id="@+id/text_loc_request"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_5"
                                        android:layout_weight="1"
                                        android:text="@string/name_loc_demo"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/label_text_size_14" />
                                </LinearLayout>


                                //date and status

                                <TextView
                                    android:id="@+id/text_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:gravity="right"
                                    android:text="@string/pending"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_15" />

                                <TextView
                                    android:id="@+id/text_cancel_request"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:gravity="right"
                                    android:text="@string/want_cancel"
                                    android:textColor="@color/app_color_blue"
                                    android:textSize="@dimen/label_text_size_15" />



                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    //roles and responsiblities

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:padding="@dimen/padding_5"
                        android:text="@string/roles_responsiblites"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_15" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/text_roles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_10"
                            android:textColor="@color/black"
                            android:textSize="@dimen/label_text_size_15" />


                    </android.support.v7.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_send_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/margin_10"
                    android:background="@drawable/bg_round_coner_green">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_5"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_5"
                        android:text="@string/send_request"
                        android:textColor="@color/white"
                        android:textSize="@dimen/label_text_size_15" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>