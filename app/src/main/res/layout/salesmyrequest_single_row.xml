<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/linear_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardBackgroundColor="@color/white"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">


                //name and delete

                <TextView
                    android:id="@+id/cate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sweet"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:background="@color/app_color_green_40"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>


                <TextView
                    android:id="@+id/text_messgae"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_5"
                    android:text="@string/notificartion_demo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/label_text_size_15" />

                //phone

                <LinearLayout
                    android:id="@+id/linear_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="@dimen/padding_5"
                        android:src="@drawable/phone" />

                    <TextView
                        android:id="@+id/text_supplierphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_13" />

                </LinearLayout>

                //loc

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="@dimen/padding_5"
                        android:src="@drawable/loc_g" />

                    <TextView
                        android:id="@+id/text_supplierloc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/name_loc_demo"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_13" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="@dimen/padding_5"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/label_text_size_13" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="@dimen/padding_10"
                    android:text="@string/accept"
                    android:textColor="@color/app_color_blue"
                    android:textSize="@dimen/label_text_size_17" />

                <TextView
                    android:id="@+id/text_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="@dimen/padding_10"
                    android:text="@string/reject"
                    android:textColor="@color/app_color_blue"
                    android:textSize="@dimen/label_text_size_17" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout></android.support.v7.widget.CardView></LinearLayout>