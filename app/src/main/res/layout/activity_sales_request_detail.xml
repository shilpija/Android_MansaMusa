<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/linear_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_blue"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/padding_10"
            android:src="@drawable/back_b"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="@string/myrequest"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/padding_10"
            android:src="@drawable/logout_w"
            android:visibility="invisible" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/image_navigation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="@dimen/padding_20"
            android:src="@drawable/navigation" />



    </FrameLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_5">

                            <TextView
                                android:id="@+id/text_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:paddingLeft="@dimen/padding_5"
                                android:paddingRight="@dimen/padding_5"
                                android:text="@string/accept"
                                android:textColor="@color/app_color_blue"
                                android:textSize="@dimen/label_text_size_15"
                                android:textStyle="bold" />

                            //name and delete


                            <TextView
                                android:id="@+id/text_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_5"
                                android:text="@string/notificartion_demo"
                                android:textColor="@color/black"
                                android:textSize="@dimen/label_text_size_15" />

                            //phone

                            <LinearLayout
                                android:id="@+id/linear_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="@dimen/padding_5"
                                    android:src="@drawable/phone" />

                                <TextView
                                    android:id="@+id/text_supplierphone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/phone_no"
                                    android:textColor="@color/app_color_blue"
                                    android:textSize="@dimen/label_text_size_13" />

                            </LinearLayout>

                            //loc

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="@dimen/padding_5"
                                    android:src="@drawable/loc_g" />

                                <TextView
                                    android:id="@+id/text_supplierloc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_loc_demo"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/label_text_size_13" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/linear_accept_reject"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/linear_Accept"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_round_coner_green"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/text_accept"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/padding_5"
                                        android:paddingLeft="@dimen/padding_20"
                                        android:paddingRight="@dimen/padding_20"
                                        android:paddingTop="@dimen/padding_5"
                                        android:text="@string/accept"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/label_text_size_17" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".6"></LinearLayout>

                                <LinearLayout
                                    android:id="@+id/linear_reject"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_round_coner_green"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/text_reject"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/padding_5"
                                        android:paddingLeft="@dimen/padding_20"
                                        android:paddingRight="@dimen/padding_20"
                                        android:paddingTop="@dimen/padding_5"
                                        android:text="@string/reject"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/label_text_size_17" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/text_want_cancel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_15"
                                android:gravity="right"
                                android:text="@string/want_cancel_job"
                                android:textColor="@color/app_color_blue"
                                android:textSize="@dimen/label_text_size_13"
                                android:textStyle="bold"
                                android:visibility="gone" />


                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>