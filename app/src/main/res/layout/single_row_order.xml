<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardBackgroundColor="@color/white"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="false">


        <LinearLayout
            android:id="@+id/linear_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_5">


            //date //order

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_no"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/label_text_size_13" />

                <TextView
                    android:id="@+id/text_order_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_weight="1"
                    android:text="#232333"
                    android:textColor="@color/black"
                    android:textSize="@dimen/label_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 jan 2018"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/label_text_size_13" />
            </LinearLayout>
            //item price

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/label_text_size_13" />

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="AED 3"
                    android:textColor="@color/app_color_blue"
                    android:textSize="@dimen/label_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            //loc

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingBottom="@dimen/padding_3"
                android:paddingTop="@dimen/padding_3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/picup_loc"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/label_text_size_13" />


                <TextView
                    android:id="@+id/text_pickup_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name_loc_demo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/label_text_size_13" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_3"
                android:paddingTop="@dimen/padding_3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_loc"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/label_text_size_13" />


                <TextView
                    android:id="@+id/text_deliveyr_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name_loc_demo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/label_text_size_13" />



            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>