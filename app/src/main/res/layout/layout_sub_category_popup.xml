<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:padding="@dimen/padding_10"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.freshhome.CommonUtil.FlowLayout
                android:id="@+id/flow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flChildSpacing="@dimen/margin_5"
                app:flChildSpacingForLastRow="@dimen/margin_5"
                app:flRowSpacing="@dimen/margin_5" />
        </ScrollView>
    </LinearLayout>
    //cancel and send btn

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center|right">

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="@string/cancel"
            android:textColor="@color/gray"
            android:textSize="@dimen/label_text_size_15" />

        <LinearLayout
            android:id="@+id/linear_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/bg_round_coner_green">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_30"
                android:paddingRight="@dimen/padding_30"
                android:paddingTop="@dimen/padding_5"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="@dimen/label_text_size_15" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>