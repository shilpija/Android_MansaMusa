<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:clipChildren="false"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:clipToPadding="false"
    android:gravity="center"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:id="@+id/linear_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            //image/name/datetime

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/dishimage"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/food" />


                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_8"
                    android:paddingRight="@dimen/padding_8"
                    android:paddingTop="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dish_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="2"
                            android:gravity="center|left"
                            android:ellipsize="end"
                            android:text="White Coco Cake"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/label_text_size_15" />

                        <!--<LinearLayout-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->

                        <!--android:orientation="horizontal">-->

                        <!--<LinearLayout-->
                        <!--android:layout_width="10dp"-->
                        <!--android:layout_height="10dp"-->
                        <!--android:gravity="center"-->
                        <!--android:layout_margin="@dimen/padding_5"-->
                        <!--android:background="@drawable/circle_bg_green_filled" />-->

                        <!--&lt;!&ndash;<ImageView&ndash;&gt;-->
                        <!--&lt;!&ndash;android:layout_width="20dp"&ndash;&gt;-->
                        <!--&lt;!&ndash;android:layout_marginLeft="@dimen/padding_5"&ndash;&gt;-->
                        <!--&lt;!&ndash;android:src="@drawable/currencygreen"&ndash;&gt;-->
                        <!--&lt;!&ndash;android:padding="2dp"&ndash;&gt;-->
                        <!--&lt;!&ndash;android:alpha=".4"&ndash;&gt;-->
                        <!--&lt;!&ndash;android:layout_height="20dp" />&ndash;&gt;-->
                        <!--<TextView-->
                        <!--android:id="@+id/dishPrice"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="@dimen/padding_5"-->
                        <!--android:singleLine="true"-->
                        <!--android:text="22"-->
                        <!--android:textColor="@color/app_color_green"-->
                        <!--android:textSize="@dimen/label_text_size_13"-->
                        <!--android:textStyle="bold" />-->

                        <!--</LinearLayout>-->
                    </LinearLayout>

                    <TextView
                        android:id="@+id/dishTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="App will ask the customer for the mobile number and the email address to send the verification code and then the account will be created"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/label_text_size_13"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="AED 23"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/label_text_size_13"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AED"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/label_text_size_13"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dishPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_5"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="22"
                            android:textColor="@color/app_color_blue"
                            android:textSize="@dimen/label_text_size_13"
                            android:textStyle="bold" />


                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="@dimen/padding_5"
                            android:src="@drawable/star" />

                        <TextView
                            android:id="@+id/text_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(4.5)"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/label_text_size_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <!--<LinearLayout-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1">-->

                        <!--<ImageView-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:padding="2dp"-->
