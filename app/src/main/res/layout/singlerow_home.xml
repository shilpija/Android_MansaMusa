                        <!--</LinearLayout>-->

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="3.5"
                                android:theme="@style/RatingBar" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


            //views

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_8"
                android:visibility="gone"
                android:paddingRight="@dimen/padding_8">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="2dp"
                    android:src="@drawable/eye"
                    android:tint="@color/app_color_blue" />

                <TextView
                    android:id="@+id/text_user_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:text="3245"
                    android:textColor="@color/app_color_blue"
                    android:textSize="@dimen/label_text_size_13"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="2dp"
                    android:src="@drawable/heart_green"
                    android:tint="@color/app_color_blue" />

                <TextView
                    android:id="@+id/text_favo_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:text="3245"
                    android:textColor="@color/app_color_blue"
                    android:textSize="@dimen/label_text_size_13"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_cart_favo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white80">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_cart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:padding="@dimen/padding_3"
                        android:src="@drawable/cart_green" />

                    <TextView
                        android:id="@+id/text_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:paddingLeft="@dimen/margin_20"
                        android:text=""
                        android:visibility="gone"
                        android:textColor="@color/red"
                        android:textSize="@dimen/label_text_size_13"
                        android:textStyle="bold" />


                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/image_favo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:padding="@dimen/padding_5"
                    android:src="@drawable/heart_green" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>